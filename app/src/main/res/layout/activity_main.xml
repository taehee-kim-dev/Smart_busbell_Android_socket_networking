<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_receivedMessagesFromWebServer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#8A03A9F4"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:paddingTop="10dp"
        android:text="[ Received messages from Spring server ]"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toSendToObejctsToWebServer" />

    <Button
        android:id="@+id/button_toSendToObejctsToWebServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="41dp"
        android:text="Send obects to web server"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/textView_receivedMessagesFromWebServer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>